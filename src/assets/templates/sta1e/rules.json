{
    "version": "1.0",
    "name": "Star Trek Adventures 1ed.",
    "base": "Modiphius 2d20",
    "style" :{
        "dice": {
            "default" :"#eca104",
            "OPS": "#136eae",
            "COMMAND": "#eca104",
            "CONN": "#f4573a"
        }
    },
    "master": [
        {"field": "name", "pinned":"left"},
        {"field": "system.species"},
        {"field": "system.assignment"},
        {
            "headerName": "Attributes", 
            "children": [
                {"width": 90, "type": ["rollable"], "headerName": "CTRL", "field": "system.attributes.control.value"},
                {"width": 90, "type": ["rollable"], "headerName": "FIT", "field": "system.attributes.fitness.value"},
                {"width": 90, "type": ["rollable"], "headerName": "PRES", "field": "system.attributes.presence.value"},
                {"width": 90, "type": ["rollable"], "headerName": "DAR", "field": "system.attributes.daring.value"},
                {"width": 90, "type": ["rollable"], "headerName": "INS", "field": "system.attributes.insight.value"},
                {"width": 90, "type": ["rollable"], "headerName": "REAS", "field": "system.attributes.reason.value"}
            ]
        },
        {
            "headerName": "Disciplines", 
            "children": [
                {"width": 90, "type": ["rollable"], "headerName": "COMM", "field": "system.disciplines.command.value"},
                {"width": 90, "type": ["rollable"], "headerName": "SEC", "field": "system.disciplines.security.value"},
                {"width": 90, "type": ["rollable"], "headerName": "SCI", "field": "system.disciplines.science.value"},
                {"width": 90, "type": ["rollable"], "headerName": "CONN", "field": "system.disciplines.conn.value"},
                {"width": 90, "type": ["rollable"], "headerName": "ENG", "field": "system.disciplines.engineering.value"},
                {"width": 90, "type": ["rollable"], "headerName": "MED", "field": "system.disciplines.medicine.value"}
            ]
        }
    ],
    "rules": {
        "roll": {
            "default": {
                "mode": "separate",
                "criteria": "lower",
                "notable": ["critical", "failure"],
                "critical": {"value": 1, "mode": "count"},
                "failure": {"value": 20, "mode": "count"}
            }
        },
        "dice": {
            "roll":"2d20",
            "modifiers": [{
                "name": "support",
                "player": "others",
                "roll": "1d20",
                "min": 0,
                "max": 1
            },{
                "name": "momentum",
                "player": "self",
                "roll": "1d20",
                "min": 0,
                "max": 2
            },{
                "name": "determination",
                "player": "self",
                "roll": "1d20",
                "min": 0,
                "max": 1
            }]
        }
    }
}